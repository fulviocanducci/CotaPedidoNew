@model ViewModelCadastro

<!-- Login Form -->
<div>
    <span class="title">JÁ TENHO REGISTRO</span>
    <p>INFORME SEU E-MAIL E SENHA</p>
    @if (!ViewData.ModelState.IsValid && Model != null)
    {
        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12">
                <div class="alert alert-dismissable alert-danger">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    @Html.ValidationSummary()
                </div>
            </div>
        </div>
    }
    @using (Html.BeginForm("LoginComprador", "Cadastro", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="input-group login-input">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                @Html.TextBoxFor(m => m.LoginCompradorModel.Email, new { @class = "form-control", placeholder = "E-Mail", autocomplete = "off"  })
                @Html.ValidationMessageFor(x => x.LoginCompradorModel.Email)
            </div>
            <br>
            <div class="input-group login-input">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                @Html.PasswordFor(m => m.LoginCompradorModel.Senha, new { @class = "form-control", placeholder = "Senha", autocomplete = "off"  })
                @Html.ValidationMessageFor(x => x.LoginCompradorModel.Senha)
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox"> Lembrar-me
                </label>
            </div>
            <div class="input-group">
                <button type="submit" class="btn btn-sm btn-primary pull-right"><i class="fa fa-long-arrow-right"></i> Login</button>
            </div>
        </div>
    }
</div>
<!-- End Login Form -->

