<form id="formBusca" method="get" action="@Url.RouteUrl("RouteListaCategoriaSubCategoriaItensDescricao")" class="container">
  <div class="jumbotron" style="background-color:#F0F0E9">
    <div class="row">
      <div class="col-md-12"  style="margin-top:0;">
          <h2 class="title text-center">Busque o que estão comprando!</h2>
        <p style="font-size:11px;font-weight:bold"></p>
      </div>
      <div class="col-md-10"  style="margin-top:15px;">
        <input type="text" class="form-control" name="descricao" id="descricao" 
               maxlength="30" value="@ViewBag.Descricao" 
               required pattern="^[A-Za-z0-9_]{3,30}$" />
      </div>
      <div class="col-md-2" style="margin-top:0;">
        <button type="submit" class="btn btn-primary btn-block"><i class="fa fa-filter"></i> Buscar</button>
      </div>
    </div>
  </div>
</form>