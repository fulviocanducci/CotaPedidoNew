@model IEnumerable<AvisoViewModel>
@using PagedList.Mvc;
@using PagedList;

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <table class="table table-bordered tbl-cart">
            <thead>
                <tr>
                    <td class="text-center hidden-xs">Código</td>
                    <td class="text-center hidden-xs">Categoria</td>
                    <td class="text-center hidden-xs">SubCategoria</td>
                    <td class="text-center hidden-xs">Área de Atuação</td>
                    <td class="text-center hidden-xs">Valor</td>
                    <td class="text-center hidden-xs">...</td>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || Model.Count() == 0)
                {
                    <tr><td colspan="6" class="text-center">Sem Notificações.</td></tr>
                }
                else
                {
                    foreach (AvisoViewModel aviso in Model)
                    {
                        <tr>
                            <td class="hidden-xs text-right">
                                @aviso.AvisoId
                            </td>
                            <td class="hidden-xs">
                                @aviso.GrupoNome
                            </td>
                            <td>
                                @aviso.SubGrupoNome
                            </td>
                            <td class="text-center">
                                @aviso.AvisoTipoDescription.ToUpper()
                            </td>
                            <td>
                                @aviso.Valor.ToUpper()
                            </td>
                            <td style="text-align: center; color:black !important;">
                                @Html.ActionLink(" ", "Edit", "Notificacao", new { Id = aviso.AvisoId }, new { @class = "fa fa-pencil-square-o", @title = "Editar Notificação" }) | 
                                @Html.ActionLink(" ", "Delete", "Notificacao", new { Id = aviso.AvisoId }, new { @class = "fa fa-trash-o", @title = "Excluir Notificação", @onclick = "return confirm('Deseja excluir?')" })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
