@model CoaPedido.WebUI.Models.ContatoEmail
@{ ViewBag.Title = "Contato"; Layout = "~/Views/Shared/_LayoutSite.cshtml";}
<section class="banner como-funciona">
  <h1>CONTATO</h1>
</section>
<section class="login flex">
  @*<div class="dados-login flex">
      Rua Regente Feijo, 152<br />
      Álvares Machado-SP<br />
      TIM.:(18) 98116-7328<br />
    </div>*@
  <div class="dados-login flex" style="width: 99%;">
    @using (Html.BeginForm("Save", "Contato", FormMethod.Post))
    {
      @Html.AntiForgeryToken()
      <div class="">
        <div class="">
          @if (!ViewData.ModelState.IsValid)
          {
            <div class="row">
              <div class="">
                <div class="">
                  <button type="button" class="close" data-dismiss="alert">×</button>
                  @Html.ValidationSummary()
                </div>
              </div>
            </div>
          }
        </div>

        <div class="dados flex">
          <i class="fa fa-child"></i>
          @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", required = "required", placeholder = "Nome completo" })
        </div>
        <div class="dados flex">
          <i class="fas fa-envelope"></i>
          @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", required = "required", placeholder = "E-mail" })
        </div>

        <div class="dados flex">
          <i class="fa fa-phone"></i>
          @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control", required = "required", placeholder = "Telefone" })
        </div>

        <div class="dados flex">
          <i class="fa fa-comment"></i>
          @Html.TextAreaFor(m => m.Mensagem, new { @class = "form-control", required = "required", placeholder = "Mensagem", cols = "112", rows = "10" })
        </div>
        <div class="flex">
          <button>Enviar</button>
        </div>

        @if (ViewBag.Status != null)
        {
          <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="alert alert-dismissable alert-success">
              <button type="button" class="close" data-dismiss="alert">×</button>
              <ul><li>Mensagem enviada com êxito</li></ul>
            </div>
          </div>
        }
      </div>
    }
  </div>  
</section>
<section style="margin-top:100px;"></section>
